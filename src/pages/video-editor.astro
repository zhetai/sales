import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div id="video-editor">
    <header>
      <h1>智能剪辑工具</h1>
      <div class="user-info">
        <span>欢迎，管理员</span>
        <button id="logout-btn">退出</button>
      </div>
    </header>

    <main>
      <section class="editor-section">
        <h2>剪映「智能成片」WASM处理</h2>
        <p>基于原始视频生成10个不同版本，筛选完播率＞35%的素材</p>
        
        <div class="input-section">
          <div class="form-group">
            <label for="video-url">视频URL:</label>
            <input type="text" id="video-url" placeholder="请输入视频URL，如：https://oss.aliyuncs.com/raw_video.mp4" value="https://oss.aliyuncs.com/raw_video.mp4">
          </div>
          
          <div class="form-group">
            <label for="product-type">商品类型:</label>
            <select id="product-type">
              <option value="保健品">保健品</option>
              <option value="OTC药品">OTC药品</option>
              <option value="中药饮片">中药饮片</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="target-duration">目标时长(秒):</label>
            <input type="number" id="target-duration" value="30" min="10" max="120">
          </div>
          
          <button id="process-btn">开始处理</button>
        </div>
        
        <div class="result-section">
          <h3>处理结果</h3>
          <div id="result-container">
            <div class="loading">等待处理...</div>
          </div>
        </div>
      </section>
    </main>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // 绑定事件监听器
    document.getElementById('process-btn').addEventListener('click', processVideo);
    document.getElementById('logout-btn').addEventListener('click', handleLogout);
  });

  // 处理视频
  const processVideo = async () => {
    const videoUrl = document.getElementById('video-url').value;
    const productType = document.getElementById('product-type').value;
    const targetDuration = parseInt(document.getElementById('target-duration').value);
    
    // 输入验证
    if (!videoUrl) {
      alert('请输入视频URL');
      return;
    }
    
    if (isNaN(targetDuration) || targetDuration < 10 || targetDuration > 120) {
      alert('请输入有效的目标时长（10-120秒）');
      return;
    }
    
    // 显示加载状态
    const resultContainer = document.getElementById('result-container');
    resultContainer.innerHTML = '<div class="loading">处理中...</div>';
    
    try {
      // 调用API处理视频
      const response = await fetch('/api/jietiao_smart_clipping', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          video_url: videoUrl,
          product_type: productType,
          target_duration: targetDuration
        })
      });
      
      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const data = await response.json();
      
      // 渲染结果
      renderResult(data);
    } catch (error) {
      console.error('处理视频失败:', error);
      resultContainer.innerHTML = `<div class="error">处理失败: ${error.message}</div>`;
    }
  };

  // 渲染处理结果
  const renderResult = (data) => {
    const resultContainer = document.getElementById('result-container');
    
    if (!data || !data.processed_videos) {
      resultContainer.innerHTML = '<div class="error">处理结果为空</div>';
      return;
    }
    
    const videos = data.processed_videos;
    const wasmStatus = data.wasm_status ? '成功' : '失败';
    
    resultContainer.innerHTML = `
      <div class="result-summary">
        <div class="status-item">
          <span class="label">WASM处理状态:</span>
          <span class="value ${data.wasm_status ? 'success' : 'error'}">${wasmStatus}</span>
        </div>
        <div class="status-item">
          <span class="label">高完播率视频:</span>
          <span class="value">${videos.length}个版本</span>
        </div>
      </div>
      
      <div class="videos-grid">
        ${videos.map((video, index) => `
          <div class="video-card">
            <h4>版本 ${index + 1}</h4>
            <div class="video-info">
              <div class="info-item">
                <span class="label">完播率:</span>
                <span class="value">${video.completion_rate}</span>
              </div>
              <div class="info-item">
                <span class="label">URL:</span>
                <a href="${video.url}" target="_blank" class="video-link">${video.url.substring(0, 30)}...</a>
              </div>
            </div>
          </div>
        `).join('')}
      </div>
    `;
  };

  // 处理退出
  const handleLogout = () => {
    if (confirm('确定要退出登录吗？')) {
      alert('已退出登录');
      // 这里应该重定向到登录页面
      // window.location.href = '/login';
    }
  };
</script>

