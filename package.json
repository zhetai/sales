{
	"name": "sales-proxy",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"build:optimized": "astro build --config astro.config.optimized.mjs",
		"preview": "astro build && wrangler dev",
		"preview:optimized": "astro build --config astro.config.optimized.mjs && wrangler dev --config wrangler.optimized.jsonc",
		"astro": "astro",
		"deploy": "astro build && wrangler deploy",
		"deploy:optimized": "astro build --config astro.config.optimized.mjs && wrangler deploy --config wrangler.optimized.jsonc",
		"deploy:auto": "./scripts/deploy.sh",
		"deploy:logs": "./scripts/deploy-with-full-logs.sh",
		"auto-commit": "./scripts/auto-commit.sh",
		"monitor-logs": "./scripts/monitor-logs.sh",
		"cf-typegen": "wrangler types",
		"analyze": "npx wrangler deploy --dry-run --outdir dist-worker",
		"bundle-analyze": "npx wrangler deploy --dry-run --outdir dist-worker && npx bundle-analyzer dist-worker/index.js",
		"test": "vitest",
		"test:run": "vitest run",
		"test:run:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"coverage:check": "nyc check-coverage",
		"lint": "eslint src/ --ext .js,.ts --max-warnings 0",
		"lint:fix": "eslint . --ext .js,.ts --fix",
		"mcp:install": "pip install mcp-use",
		"mcp:agent": "python ci-cd/mcp_agent.py",
		"ci:ai": "npm run build && npm run mcp:agent --instruction \"运行所有测试并生成报告\"",
		"ci:ai:test": "npm run mcp:agent --instruction \"运行单元测试并验证覆盖率≥80%\"",
		"ci:ai:lint": "npm run mcp:agent --instruction \"运行代码质量检查并生成报告\"",
		"ci:ai:security": "npm run mcp:agent --instruction \"执行安全扫描并识别潜在风险\""
	},
	"dependencies": {
		"@astrojs/cloudflare": "^12.6.10",
		"astro": "^5.14.3",
		"chart.js": "^4.5.0",
		"jsonwebtoken": "^9.0.2"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.57.0",
		"@types/node": "^20.17.10",
		"@vitest/coverage-v8": "^4.0.14",
		"chromatic": "^13.3.0",
		"istanbul": "^0.4.5",
		"jsdom": "^27.2.0",
		"nyc": "^17.0.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"vitest": "^4.0.5",
		"wrangler": "^4.42.2",
		"mcp-use": "^0.3.0",
		"langchain": "^0.2.0",
		"@anthropic-ai/sdk": "^0.24.0",
		"playwright": "^1.44.0"
	}
}
